<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="materialButtonStyle">@style/AppTheme.MaterialButton</item>
        <item name="floatingActionButtonStyle">@style/AppTheme.FloatButton</item>
        <!--<item name="extendedFloatingActionButtonStyle">@style/AppTheme.FloatButton</item>-->
    </style>

    <style name="AppTheme.MaterialButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">20dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">2dp</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="backgroundTint">@color/transparent</item>
    </style>

    <style name="AppTheme.FloatButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/white</item>
        <item name="rippleColor">@color/colorPrimaryDark</item>
        <item name="borderWidth">2dp</item>
        <item name="android:shape">ring</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>


</resources>
