<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.xiaoliublog.pic.BackgroundColor"/>
        <variable
            name="viewmodel"
            type="com.xiaoliublog.pic.MainActivityViewModel" />
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        background_color="@{viewmodel.bg}">

        <com.xiaoliublog.pic.ui.MyImageView
            android:id="@+id/canvas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/content_image_desc"
            bitmap="@{viewmodel.result}"/>

        <RelativeLayout
            android:id="@+id/dock"
            android:layout_gravity="bottom|center"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:background="@drawable/dock_bg_dark"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="35dp"
                >
                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:justifyContent="space_around">
                    <com.xiaoliublog.pic.ui.MyRadioButton
                        android:id="@+id/radio_transparent"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:button="@null"
                        app:selectedColor="@color/transparent"
                        app:shape="circle"
                        android:onClick="@{()->viewmodel.setBg(BackgroundColor.Transparent)}"
                        />
                    <com.xiaoliublog.pic.ui.MyRadioButton
                        android:id="@+id/radio_white"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:button="@null"
                        app:selectedColor="#F6F6F5"
                        app:shape="circle"
                        android:onClick="@{()->viewmodel.setBg(BackgroundColor.White)}"
                        />
                    <com.xiaoliublog.pic.ui.MyRadioButton
                        android:id="@+id/radio_black"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:button="@null"
                        app:selectedColor="#515152"
                        app:shape="circle"
                        android:onClick="@{()->viewmodel.setBg(BackgroundColor.Black)}"
                        />
                </com.google.android.flexbox.FlexboxLayout>
            </RadioGroup>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="80dp"
                >
                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:justifyContent="space_around">
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/btn_import"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:button="@null"
                        android:background="@drawable/dock_import_light"
                        android:onClick="selectImg"
                        />
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/btn_save"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:button="@null"
                        android:background="@drawable/dock_save_light"
                        android:onClick="@{()->viewmodel.saveImg()}"
                        />
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/btn_share"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:button="@null"
                        android:background="@drawable/dock_share_light"
                        android:onClick="shareImg"
                        />
                </com.google.android.flexbox.FlexboxLayout>
            </RadioGroup>
        </RelativeLayout>

        <com.xiaoliublog.pic.ui.MyRadioButtonGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_anchorGravity="center_horizontal"
            app:layout_anchor="@id/dock"
            app:layout_dodgeInsetEdges="top"
            android:orientation="horizontal">
            <com.xiaoliublog.pic.ui.MyRadioButton
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                app:selectedColor="#FEFFFE"
                />
            <com.xiaoliublog.pic.ui.MyRadioButton
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                app:selectedColor="#191A19"
                />
            <com.xiaoliublog.pic.ui.MyRadioButton
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                app:selectedColor="#FEA6A3"
                />
            <com.xiaoliublog.pic.ui.MyRadioButton
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                app:selectedColor="#2D4B0F"
                />
        </com.xiaoliublog.pic.ui.MyRadioButtonGroup>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>

